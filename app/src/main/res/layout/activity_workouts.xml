<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="com.markbusman.summitexercises.Workouts"
    android:background="#ffffff">


        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:id="@+id/button_editworkout"
            android:textColor="#ffffff"
            android:background="#DD8100"
            android:layout_toLeftOf="@+id/button_importworkout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="1dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:id="@+id/button_addworkout"
            android:layout_above="@+id/WorkoutsList"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="#ffffff"
            android:background="#DD8100"
            android:layout_toRightOf="@+id/button_importworkout"
            android:layout_toEndOf="@+id/button_importworkout"
            android:layout_margin="1dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Import Workout"
            android:id="@+id/button_importworkout"
            android:textColor="#ffffff"
            android:background="#DD8100"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_margin="1dp" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/WorkoutsList"
            android:divider="#FF0000"
            android:dividerHeight="5px"
            android:descendantFocusability="afterDescendants"
            android:layout_below="@+id/button_editworkout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#ffffff" />

</RelativeLayout>


